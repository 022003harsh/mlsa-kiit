#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running pre-commit hook...🍺"

npx lint-staged
echo "ESLint & Prettier check completed successfully. ✅ "

yarn test || (
  echo "Test failed. ❌ "
  exit 1
)
echo "Test completed successfully. ✅ "

yarn build || (
  echo "Build failed. ❌ "
  exit 1
)
echo "Build completed successfully. ✅ "
